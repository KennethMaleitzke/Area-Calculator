<Window x:Class="Area_Calculator.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Area_Calculator"
        mc:Ignorable="d"
        Title="HelpWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock
            Text="Get the lenght and width of the room you want to carpet. Then enter your budget."
            TextAlignment="center"
            Margin="20"/>
        <Button
            x:Name="Button_Close"
            Width="100"
            Height="30"
            Content="Close"
            Click="Button_Close_Click"/>
    </StackPanel>
</Window>
